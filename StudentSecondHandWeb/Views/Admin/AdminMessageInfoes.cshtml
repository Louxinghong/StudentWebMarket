

@using PagedList.Mvc;
@model PagedList.IPagedList<StudentSecondHandWeb.Models.MessageInfo>


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>后台-留言信息</title>
    <link href="~/Content/MyCSS/tableinformation.css" rel="stylesheet" />
    <link href="~/Content/MyCSS/PagedList.css" rel="stylesheet" />
</head>

<body>

    <div id="page-wrap">
        <table>
            <thead>
                <tr>
                    <th>编号</th>
                    <th>商品编号</th>
                    <th>名称</th>
                    <th>卖家</th>
                    <th>卖家电话</th>
                    <th>留言者</th>
                    <th>留言者电话</th>
                    <th>留言内容</th>
                    <th>留言时间</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.ResID)</td>
                        <td>@Html.DisplayFor(modelItem => item.ResName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Seller)</td>
                        <td>@Html.DisplayFor(modelItem => item.SellerPhone)</td>
                        <td>@Html.DisplayFor(modelItem => item.MessagePerson)</td>
                        <td>@Html.DisplayFor(modelItem => item.MessagePersonPhone)</td>
                        <td>@Html.DisplayFor(modelItem => item.MessageContext)</td>
                        <td>@Html.DisplayFor(modelItem => item.MessageTime)</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>


    @Html.PagedListPager(
        Model, page => Url.Action("AdminMessageInfoes", new { page = page }),
        new PagedListRenderOptions {
            LinkToFirstPageFormat = "首页",
            LinkToPreviousPageFormat = "上一页",
            LinkToNextPageFormat = "下一页",
            LinkToLastPageFormat = "尾页",
            MaximumPageNumbersToDisplay = 5
        }
    )

    <script src="~/Scripts/MyJavaScripts/backgroundinfodetails.js"></script>
</body>
</html>




